<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:background="@color/one">
    <ImageView
            android:layout_width="474dp"
            android:layout_height="648dp"
            android:id="@+id/imageView"
            android:src="@drawable/mm"
            android:layout_row="2" android:layout_column="2"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TRACKING STOPPED"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp" android:textStyle="bold"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Continue Tracking"
            android:id="@+id/button" android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="41dp" android:layout_marginBottom="70dp"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Retrack"
            android:id="@+id/button2"
            android:layout_marginRight="36dp" android:layout_alignTop="@+id/button"
            android:layout_alignParentEnd="true"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/m"
            android:src="@drawable/m"
            android:layout_row="2" android:layout_column="2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>