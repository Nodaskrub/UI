<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/one">

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/m"
            android:src="@drawable/triangle"
            android:layout_row="2" android:layout_column="2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tips Screen"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" android:textStyle="bold"/>
</RelativeLayout>