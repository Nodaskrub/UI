<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/one">
    <ImageView
    android:layout_width="474dp"
    android:layout_height="150dp"
    android:id="@+id/imageView"
    android:src="@drawable/mm"
    android:layout_row="2" android:layout_column="2"
    android:layout_below="@+id/space"
    android:layout_alignParentStart="true"/>
    <Space
            android:layout_width="800px"
            android:layout_height="125px"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:id="@+id/space"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/m"
            android:src="@drawable/m"
            android:layout_row="2" android:layout_column="2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Arrow"
            android:id="@+id/button" android:layout_above="@+id/m" android:layout_centerHorizontal="true"/>
</RelativeLayout>